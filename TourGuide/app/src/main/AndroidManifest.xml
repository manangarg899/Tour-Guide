<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.manan.tourguide">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true">


        <activity
            android:name=".MainActivity"
            android:theme="@style/AppTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".CenterActivity"
            android:label="Around Me"
            android:theme="@style/CenterTheme">

            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.manan.tourguide.MainActivity" />
        </activity>

        <activity
            android:name=".RestaurantActivity"
            android:label="Restaurants"
            android:theme="@style/CenterTheme">

            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.manan.tourguide.CenterActivity" />

        </activity>

        <activity
            android:name=".ReligiousplacesActivity"
            android:label="Religious Places"
            android:theme="@style/CenterTheme">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.manan.tourguide.CenterActivity" />

        </activity>

        <activity
            android:name=".GalleriaActivity"
            android:label="Galleria"
            android:theme="@style/CenterTheme">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.manan.tourguide.CenterActivity" />
        </activity>

        <activity
            android:name=".AttractionActivity"
            android:label="Attractions"
            android:theme="@style/CenterTheme">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.manan.tourguide.CenterActivity" />
        </activity>

    </application>

</manifest>